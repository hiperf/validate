{
    "name": "@repharm/validate",
    "version": "1.0.0",
    "description": "json schema validator",
    "main": "index.js",
    "license": "MIT",
    "exports": {
        ".": {
            "require": "./dist/cjs/index.js",
            "import": "./dist/es/index.js"
        },
